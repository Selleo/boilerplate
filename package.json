{
  "name": "common_nestjs_remix",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build-email": "turbo build-email",
    "dev": "turbo dev",
    "dev-social": "turbo dev-social",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:client": "pnpm run --filter=guidebook-web-app generate:client",
    "db:generate": "pnpm run --filter=guidebook-api db:generate",
    "db:migrate": "pnpm run --filter=guidebook-api db:migrate",
    "test:web": "pnpm run --filter=guidebook-web-app test",
    "test:api": "pnpm run --filter=guidebook-api test",
    "test:web:e2e": "pnpm run --filter=guidebook-web-app test:e2e",
    "test:api:e2e": "pnpm run --filter=guidebook-api test:e2e",
    "typecheck:api": "pnpm run --filter=guidebook-api typecheck"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.6.0",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=24.8.0"
  }
}
