{
  "name": "boilerplate-web-app",
  "version": "1.6.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "dev-social": "VITE_API_URL=http://localhost:3000 react-router dev",
    "typecheck": "tsc --noEmit",
    "typegen": "react-router typegen",
    "lint": "eslint app/ --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:client": "swagger-typescript-api generate -p ../api/src/swagger/api-schema.json -o ./app/api --axios --name generated-api.ts --api-class-name API",
    "start": "react-router-serve ./build/server/index.js",
    "tsc": "react-router typegen && tsc",
    "test": "vitest"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@react-router/node": "^7.10.1",
    "@react-router/serve": "^7.10.1",
    "@tanstack/react-query": "^5.90.12",
    "axios": "^1.13.2",
    "better-auth": "^1.4.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "i18next": "^25.7.3",
    "input-otp": "^1.4.2",
    "isbot": "^5.1.32",
    "lucide-react": "^0.561.0",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.5",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-day-picker": "^9.13.2",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-i18next": "^16.5.0",
    "react-resizable-panels": "^4.6.5",
    "react-router": "^7.10.1",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "vaul": "^1.1.2",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@react-router/dev": "^7.10.1",
    "@repo/eslint-config": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "jsdom": "^27.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "swagger-typescript-api": "^13.2.16",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.1",
    "vitest": "^4.0.15"
  }
}
