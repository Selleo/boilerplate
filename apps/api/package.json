    "test:debug": "NODE_ENV=test EMAIL_ADAPTER=ci REDIS_URL=redis://localhost:6379/15 vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "NODE_ENV=test EMAIL_ADAPTER=ci REDIS_URL=redis://localhost:6379/15 vitest run --config ./vitest.config.e2e.ts",
    "test:e2e:watch": "NODE_ENV=test EMAIL_ADAPTER=ci REDIS_URL=redis://localhost:6379/15 vitest --config ./vitest.config.e2e.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:seed": "ts-node -r tsconfig-paths/register ./src/seed.ts",
    "db:studio": "drizzle-kit studio"
