    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test EMAIL_ADAPTER=ci REDIS_URL=redis://localhost:6379/15 vitest run",
    "test:watch": "NODE_ENV=test EMAIL_ADAPTER=ci REDIS_URL=redis://localhost:6379/15 vitest",
