{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build-email": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@repo/email-templates#build-email"]
    },
    "dev-social": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@repo/email-templates#build-email"]
    },
    "dev-mail": {
      "cache": false,
      "persistent": true
    },
    "@repo/email-templates#build": {
      "cache": false,
      "outputs": ["dist/**"]
    }
  }
}
